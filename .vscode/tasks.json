{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Rebuild metadata",
            "type": "shell",
            "command": "python bin/build_metadata.py && python bin/build_roster.py && python bin/build_matches.py",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint an article",
            "type": "shell",
            "command": "python bin/lint.py -A ${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Lint everything",
            "type": "shell",
            "command": "python bin/lint.py",
            "presentation": {
                "revealProblems": "onProblem",
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": {
                "owner": "jinja",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^\\[(.*)\\] (.*)$",
                    "file": 1,
                    "message": 2
                }
            }
        }
    ]
}